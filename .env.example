# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================

# Main Bot Token (получить через @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Admin Bot Token (получить через @BotFather)
TELEGRAM_ADMIN_BOT_TOKEN=987654321:ZYXwvuTSRqponMLKjiHGfeDCBA

# Admin User IDs (через запятую)
ADMIN_USER_IDS=123456789,987654321

# Webhook URL (если используется webhook вместо polling)
# WEBHOOK_URL=https://yourdomain.com
# WEBHOOK_PATH=/webhook

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database URL (async)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_bot

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# Redis URL for FSM and caching
REDIS_URL=redis://localhost:6379/0

# Redis FSM database (for aiogram states)
REDIS_FSM_DB=1

# ==============================================
# AI API KEYS
# ==============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Anthropic Claude (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI (https://makersuite.google.com/app/apikey)
GOOGLE_AI_API_KEY=AIza...

# DeepSeek (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=sk-...

# Perplexity (https://www.perplexity.ai/settings/api)
PERPLEXITY_API_KEY=pplx-...

# Stability AI (https://platform.stability.ai/)
STABILITY_API_KEY=sk-...

# Midjourney (неофициальный API)
MIDJOURNEY_API_KEY=

# Replicate (https://replicate.com/account/api-tokens)
REPLICATE_API_KEY=r8_...

# Suno AI (https://docs.sunoapi.org/)
SUNO_API_KEY=

# Luma Labs (https://docs.lumalabs.ai/)
LUMA_API_KEY=

# Hailuo (MiniMax) AI (https://docs.aimlapi.com/)
HAILUO_API_KEY=

# Kling AI (https://app.klingai.com/)
KLING_API_KEY=

# AI/ML API - Universal API for multiple AI models (Hailuo, Kling, etc.)
# This can be used as a fallback if specific service keys are not provided
# Get your key at: https://aimlapi.com/
AIMLAPI_KEY=

# Remove.bg (https://www.remove.bg/api)
REMOVEBG_API_KEY=

# BytePlus/ByteDance ARK API (for Seedream image generation)
# Get your API key at: https://console.byteplus.com/ark/apiKey
ARK_API_KEY=

# ==============================================
# GOOGLE CLOUD / VERTEX AI (for Imagen)
# ==============================================

# Google Cloud Project ID (for Imagen 3)
GOOGLE_CLOUD_PROJECT=your-project-id

# Path to Google Cloud credentials JSON file (for Imagen 3)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-credentials.json

# ==============================================
# GOOGLE GEMINI API (for Veo 3.1)
# ==============================================

# Google Gemini API Key (for Veo 3.1 video generation)
# Get your API key at: https://aistudio.google.com/apikey
GOOGLE_GEMINI_API_KEY=AIza...

# ==============================================
# PAYMENT CONFIGURATION (ЮKassa)
# ==============================================

# ЮKassa Shop ID (https://yookassa.ru/)
YUKASSA_SHOP_ID=123456

# ЮKassa Secret Key
YUKASSA_SECRET_KEY=live_...

# Payment Return URL
PAYMENT_RETURN_URL=https://t.me/your_bot

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Environment (development, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=True

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# App Host and Port (for FastAPI)
APP_HOST=0.0.0.0
APP_PORT=8000

# ==============================================
# FILE STORAGE
# ==============================================

# Storage Path
STORAGE_PATH=./storage

# Max File Size (in MB)
MAX_FILE_SIZE_MB=100

# File Retention Days
FILE_RETENTION_DAYS=3

# ==============================================
# RATE LIMITING
# ==============================================

# Free User Requests per Hour
FREE_USER_RATE_LIMIT=5

# Basic Subscription Requests per Hour
BASIC_RATE_LIMIT=100

# Premium Subscription Requests per Hour
PREMIUM_RATE_LIMIT=500

# Global IP Rate Limit (requests per hour)
GLOBAL_IP_RATE_LIMIT=1000

# ==============================================
# REFERRAL PROGRAM
# ==============================================

# User Referral Token Percentage (%)
USER_REFERRAL_PERCENTAGE=50

# Partner Referral Money Percentage (%)
PARTNER_REFERRAL_PERCENTAGE=10

# Minimum Payout Amount (RUB)
MIN_PAYOUT_AMOUNT=500

# ==============================================
# AI CACHE SETTINGS
# ==============================================

# Enable AI Response Caching
ENABLE_AI_CACHE=True

# Cache TTL (in hours)
AI_CACHE_TTL_HOURS=24

# ==============================================
# SECURITY
# ==============================================

# Secret Key for JWT and other security features
SECRET_KEY=your-secret-key-change-this-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==============================================
# MONITORING
# ==============================================

# Enable Prometheus Metrics
ENABLE_METRICS=False

# Metrics Port
METRICS_PORT=9090

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://...@sentry.io/...
